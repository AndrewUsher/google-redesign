// Default style
*,
*:before,
*:after 
  box-sizing: border-box;
  margin: 0;
  padding: 0;

:root 
  font-size: 10px;

body 
  font-family: 'Roboto', sans-serif;

.profile-container 
  width: 60px;
  height: 60px;
  border-radius: 50%;
  position: absolute;
  top: 20px; 
  right: 20px;
  background-color: dodgerblue;
  #notifications 
    background-color: #EB4335;
    color: #ffffff;
    position: absolute;
    bottom: -10px;
    right: -5px;
    display: block;
    text-align: center;
    border-radius: 50%;
    padding: 5px 10px;
    font-size: 20px;


.container 
  width: 95%;
  margin: 0 auto;
  height: 96vh;
  display: flex;
  justify-content: center;
  align-items: center;

.search-container 
  text-align: center;
  position: relative;
  top: -20px;
  width: 90%;
  
  .logo
    height: 120px;
    margin-bottom: 30px;
  
  #input-container 
    display: flex;
    background-color: #f0f0f0;
    border-radius: 30px;
    opacity: 0.75;
    padding: 10px 15px;
    justify-content: space-between;
    margin-bottom: 30px;
    transition: all 500ms ease;

    &:hover 
      opacity: 1;

    input 
      width: 100%;
      border: 0;
      font-size: 30px;
      background-color: transparent;
      padding-left: 20px;

      &:focus 
        outline: none;

    img 
      height: 40px;
  
  .shortcuts-container 
    width: 50%;
    margin: 0 auto;

    img
      width: 20%;
      max-width: 70px;
      margin-left: 10px;

    a 
      display: block;
      color: #222;
      opacity: 0.6;
      text-decoration: none;
      font-size: 2.1rem;
      font-weight: 500;
      transition: all 700ms;

      &:hover 
        opacity: 1;


footer 
  align-self: center;
  display: flex;
  justify-content: space-between;
  width: 96%;
  margin: 0 auto;

  ul li 
    color: #555555;
    display: inline-block;
    margin-right: 15px;
    margin-bottom: 5px;
    font-size: 1.7rem;
  